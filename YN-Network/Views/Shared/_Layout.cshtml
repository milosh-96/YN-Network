@{
    YN_Network.Models.Fact fact = YN_Network.Services.GlobalService.GetRandomFact();
    YN_Network.Models.MyIpAddress myIp = YN_Network.Services.GlobalService.GetMyIpAddress();

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap-grid.min.css" rel="stylesheet" type="text/css" />
    <link href="/css/site.css" rel="stylesheet" type="text/css" />
    <title>YN Network - Something New!</title>

    <style>

    </style>
</head>
<body>
    <div id="topbar">
        <div class="container">
            <div class="row">
                <div class="col-3">
                    <strong>My IP:</strong> @myIp.Ip
                </div>
                <div class="col-9" id="fact">
                        <span style="color:dodgerblue">i</span>
                        <strong>Random Fact:</strong>
                        @fact.Text (@fact.Source)
                </div>
            </div>
         </div>
            </div>
    </div>
    <header>
        <div class="container">
        <h2 class="logo"><a asp-area="" asp-controller="Home" asp-action="Index">YN NETWORK</a></h2>
            </div>
    </header>
    <div class="container">
        <div class="row">
            <div class="col">
    <nav style="display:inline-block">
        <a href="#">Questions & Answers</a>
        <a asp-area="News" asp-controller="Home" asp-action="Index">News</a>
        <a href="#">Games</a>
        <a href="#">Weather</a>
        <a href="#">Comics</a>
        <a asp-area="Jokes" asp-controler="Home" asp-action="Index">Jokes</a>
        <a href="#">Countries</a>
    </nav>
                </div>
            </div>
    </div>
    <div class="container">
        <div class="row">
        <div class="col">
            <strong>YN Index: </strong>
        <form method="get" style="display:inline-block" asp-area="Search" asp-controller="Query" asp-action="Index">
            <input name="query" type="text" placeholder="Search!"><button>Search!</button>
            <button>Submit Link</button>
        </form>
                </div>
            </div>
       
    <hr>
    <div id="content">
        <div class="container">
            @RenderBody()
        </div>
    </div>

    <footer class="container">
        <div style="margin-top:50px"></div>
        @DateTime.Now.Year.ToString()
        <small>&copy; YN Network. All Rights Reserved.</small>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>
</body>
</html>

@{
    YN_Network.Models.Fact fact = YN_Network.Services.GlobalService.GetRandomFact();
    YN_Network.Models.MyIpAddress myIp = YN_Network.Services.GlobalService.GetMyIpAddress();

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- Compressed CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/foundation-sites@6.6.3/dist/css/foundation.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/foundation-sites@6.6.3/dist/css/foundation-float.min.css">
    <!-- Compressed JavaScript -->
    <link href="/css/site.css" rel="stylesheet" type="text/css" />
    <title>YN Network - Something New!</title>

    <style>

    </style>
</head>
<body>
    <div id="topbar">
        <div class="row">
            <div class="columns small-2">
                <strong>My IP:</strong> @myIp.Ip
            </div>
            <div class="columns small-10" id="fact">
                <span style="color:dodgerblue">i</span>
                <strong>Random Fact:</strong>
                @fact.Text (@fact.Source)
            </div>
        </div>
    </div>
    <header>
        <div class="row">
            <h2 class="logo"><a asp-area="" asp-controller="Home" asp-action="Index">YN NETWORK</a></h2>
        </div>
    </header>
        <div class="row">
                <div class="columns small-12">
                    <nav style="display:inline-block">
                    <a href="#">Questions & Answers</a>
                    <a asp-area="News" asp-controller="Home" asp-action="Index">News</a>
                    <a href="#">Games</a>
                    <a href="#">Weather</a>
                    <a href="#">Comics</a>
                    <a asp-area="Jokes" asp-controler="Home" asp-action="Index">Jokes</a>
                    <a href="#">Countries</a>
                        </nav>
                </div>
            </div>
        <div class="row">
            <div class="columns small-12">
                
                <form method="get" style="display:inline-block" asp-area="Search" asp-controller="Query" asp-action="Index">
                    <div class="input-group">
                        <span class="input-group-label">
                            <strong>YN Index: </strong>
                        </span>
                        <input name="query" type="text" class="input-group-field" placeholder="Enter your query here...">
                        <div class="input-group-button">
                            <input type="submit" class="button" value="Search!" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div id="content">
                @RenderBody()
        </div>

        <footer class="container">
            <div style="margin-top:50px"></div>
            @DateTime.Now.Year.ToString()
            <small>&copy; YN Network. All Rights Reserved.</small>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/foundation-sites@6.6.3/dist/js/foundation.min.js" integrity="sha256-pRF3zifJRA9jXGv++b06qwtSqX1byFQOLjqa2PTEb2o=" crossorigin="anonymous"></script>
</body>
</html>

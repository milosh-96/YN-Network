@page
@model YN_Network.Areas.News.Pages.IndexModel
@using System.Globalization
<div class="row">
    <div class="columns small-12 medium-8">
        <h2>Latest News</h2>
    </div>

</div>
<div class="row">
    <div class="columns small-12 medium-8">
    
            <component type="typeof(YN_Network.Areas.News.ViewComponents.ArticlesList)"
                       render-mode="ServerPrerendered"
                        />
    </div>
    <div class="columns small-12 medium-4">
        <form asp-area="News" asp-controller="Home" asp-action="Index" method="get">
            <div class="input-group">
                <div class="input-group-label">
                    Language
                </div>
                <select name="country" class="input-group-field">
                    @foreach (string country in Model.ViewModel.SourcesCountries)
                    {
                        <option value="@country">
                            @{
                                var cultureInfo = new CultureInfo(country);
                                var regionInfo = new RegionInfo(cultureInfo.Name);
                                @regionInfo.EnglishName;

                        }
                    </option>
                }
                </select>
                <div class="input-group-button">
                    <input type="submit" class="input-group-submit" />

                </div>
            </div>
        </form>
        <div>

           
        </div>

    </div>
</div>

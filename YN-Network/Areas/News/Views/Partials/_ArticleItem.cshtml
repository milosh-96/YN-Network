@model YN_Network.Areas.News.Models.Article
<div class="news-item callout">
    <h3>@Model.Title</h3>
    <em>@Model.PublishedAt.ToString()</em>
    <div>
        <img src="@Model.UrlToImage" width="100%" style="max-width:600px" alt="@Model.Title" />
    </div>

    <div>
        <p>
            @Model.Description
        </p>
    </div>

    <div>
        @Model.Source.Name
    </div>
    <hr />
</div>
@model YN_Network.Areas.Search.ViewModels.ResultViewModel
<div class="row">
    <div class="columns small-12">
        <h2>Search results for @Model.Query</h2>

        @{Html.RenderPartial("../Widgets/_QuerySearchWidget"); }

        <div>
            @foreach (YN_Network.Areas.Search.Models.Topic topic in Model.RelatedTopics)
            {
                @if (topic.Text != null)
                {
                    <div class="callout">
                        <div class="row">
                            <div class="columns small-12 medium-4">
                                <img src="@topic.Icon.URL" width="100%" />
                            </div>
                            <div class="columns small-12 medium-8">
                                <strong>@topic.Text</strong>
                            </div>

                        </div>
                    </div>
                }
                        }
        </div>

    </div>
</div>

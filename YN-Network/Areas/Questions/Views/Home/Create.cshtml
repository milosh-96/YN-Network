@model YN_Network.Areas.Questions.Models.Question

<hr />
<div class="row">
    <div class="columns">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group">
                <span class="input-group-label">Title</span>
                <input type="text" asp-for="Title" class="input-group-field" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="input-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="columns small-12 medium-6">
                    <div class="input-group">
                        <span class="input-group-label">Option A</span>
                        <input type="text" asp-for="OptionA" class="input-group-field" />
                        <span asp-validation-for="OptionA" class="text-danger"></span>
                    </div>
                </div>
                <div class="columns small-12 medium-6">
                    <div class="input-group">
                        <span class="input-group-label">Option B</span>
                        <input type="text" asp-for="OptionB" class="input-group-field" />
                        <span asp-validation-for="OptionB" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="input-group">
                <input type="submit" value="Create" class="btn" />
            </div>
        </form>
    </div>
</div>


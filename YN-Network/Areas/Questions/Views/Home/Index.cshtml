@model IEnumerable<YN_Network.Areas.Questions.Models.Question>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="row">
        <div class="columns">
            An original YN Network feature. Coming Soon!
        </div>
    </div>

    <div class="row">
        <div class="columns small-12 medium-8">
            <h3>
                Latest Questions
            </h3>
        </div>
        <div class="columns small-12 medium-4">
            <h3>Most Popular</h3>
        </div>
    </div>
    <div class="row">
        <div class="columns small-12 medium-4">
            <p>
                <a class="button" asp-area="Questions" asp-controller="Home" asp-action="Create">Ask!</a>
            </p>
            @foreach (YN_Network.Areas.Questions.Models.Question item in Model)
            {
                <div class="row" style="border:1px solid #ccc">
                    <div class="columns small-12">
                        <p style="font-size:20px">@item.Title</p>
                    </div>
                    <div class="columns small-6">
                        <button class="button" style="width:100%">@item.OptionA</button>
                    </div>
                    <div class="columns small-6">
                        <button class="button" style="width:100%">@item.OptionB</button>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>

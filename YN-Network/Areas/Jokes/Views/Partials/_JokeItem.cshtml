@model YN_Network.Areas.Jokes.Models.Joke
<div class="joke callout" style="width:100%">
    <div class="content">
        <div class="setup-joke"><em>@Model.Setup</em></div>
        <div class="punchline"><strong>@Model.PunchLine</strong></div>
    </div>
    <div class="type">
        type: <em>
            <a asp-area="Jokes"
               asp-controller="Home"
               asp-action="Index"
               asp-route-type="@Model.Type">
                @Model.Type
            </a>
        </em>
    </div>
</div>